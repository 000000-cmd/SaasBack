# ============================================
# CONFIGURACIÓN BÁSICA - 5 SERVICIOS
# ============================================

VPS_HOST=72.62.174.193
VPS_USER=root
VPS_PATH=/opt/saas-platform

# Infraestructura
DEPLOY_MYSQL=true
DEPLOY_CONFIG_SERVER=true
DEPLOY_DISCOVERY_SERVICE=true
DEPLOY_AUTH_SERVICE=true
DEPLOY_GATEWAY_SERVICE=true

# Core
SERVICE_PORT_CONFIG_SERVER=8888
SERVICE_DEPS_CONFIG_SERVER=""

SERVICE_PORT_DISCOVERY_SERVICE=8761
SERVICE_DEPS_DISCOVERY_SERVICE="config-server"

# Servicios
SERVICE_PORT_AUTH_SERVICE=8082
SERVICE_DEPS_AUTH_SERVICE="mysql config-server discovery-service"

SERVICE_PORT_SYSTEM_SERVICE=8083
SERVICE_DEPS_SYSTEM_SERVICE="mysql config-server discovery-service"

SERVICE_PORT_GATEWAY_SERVICE=8080
SERVICE_DEPS_GATEWAY_SERVICE="config-server discovery-service auth-service system-service"

# Build
FORCE_REBUILD=false          # true = reconstruir todo sin cache (lento pero seguro)
                            # false = usar cache (rápido)

# Backup
SKIP_BACKUP=false           # true = NO hacer backup de BD antes de desplegar
                            # false = HACER backup (recomendado)

# Base de datos
RUN_MIGRATIONS=true         # true = ejecutar migraciones automáticamente
                            # false = NO ejecutar migraciones

# Git
AUTO_PULL=true              # true = hacer git pull automático
                            # false = usar código local
GIT_BRANCH=main             # Rama a desplegar (main, develop, feature/xyz)

# UI
SHOW_LOGS=true              # true = mostrar logs después del deploy
                            # false = solo mostrar resumen

# Health Checks
HEALTH_CHECK_TIMEOUT=120    # Segundos máximos para esperar health check
HEALTH_CHECK_INTERVAL=3     # Segundos entre intentos de health check